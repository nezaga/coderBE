<div>    
    <h1>List of products in real time</h1>
    
    <form action="/realtimeproducts" method="POST" id="addProductForm" onsubmit="addLiveProduct">
        Title: <input type="text" name="title">
        Price: <input type="number" name="price">
        Code: <input type="text" name="code">
        Stock: <input type="number" name="stock">
        Description: <input type="text" name="description">
        Thumbnail: <input type="text" name="thumbnail">
        Category: <input type="text" name="category">
        <button>Add</button>
    </form>

    <table id="prodsLiveTable">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Code</th>
            <th>Stock</th>
            <th>Description</th>
            <th>Thumbnail</th>
        </tr>
        {{#each productsList}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.description}}</td>
                <td><img src={{this.thumbnail}} alt={{this.thumbnail}}></td>
            </tr>
        {{/each}}
        <div id="productsList">

        </div>
        
    </table>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>